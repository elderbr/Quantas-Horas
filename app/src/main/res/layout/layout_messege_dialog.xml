<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/laranja">

    <TextView
        android:id="@+id/msgTituloTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="AVISO"
        android:textSize="24sp"
        android:textAlignment="center"
        android:background="@color/marrom"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/msgTextTv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/msgTituloTv"
        app:layout_constraintBottom_toTopOf="@+id/msgBtn"
        android:text="Mensagem desejada"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="6dp"
        />

    <Button
        android:id="@+id/msgBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="6dp"
        android:layout_marginTop="20dp"
        android:text="OK"
        />

</androidx.constraintlayout.widget.ConstraintLayout>