<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_hora_casa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/laranja_1"
    android:layout_marginTop="6dp"
    android:paddingBottom="10dp"
    app:layout_constraintTop_toBottomOf="@+id/layout_hora"
    >

    <TextView
        android:id="@+id/tvHoraCasa"
        style="@style/text"
        android:textColor="@color/white"
        android:text="Horas Casa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/etHoraCasa"
        style="@style/hora"
        app:layout_constraintLeft_toLeftOf="@+id/tvHoraCasa"
        app:layout_constraintTop_toBottomOf="@+id/tvHoraCasa"
        />

    <TextView
        android:id="@+id/hora_casa_meno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="36dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/etHoraCasa"
        app:layout_constraintBaseline_toBaselineOf="@+id/etHoraCasa"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/tvHoraCasaUsada"
        style="@style/text"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:text="Casa Usada"
        app:layout_constraintLeft_toRightOf="@+id/etHoraCasa"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvHoraCasa"
        />

    <EditText
        android:id="@+id/etHoraCasaUsada"
        style="@style/hora"
        app:layout_constraintLeft_toLeftOf="@+id/tvHoraCasaUsada"
        app:layout_constraintTop_toBottomOf="@+id/tvHoraCasaUsada"
        android:focusable="false"
        />

    <TextView
        android:id="@+id/hora_casa_igual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="36dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/etHoraCasaUsada"
        app:layout_constraintBaseline_toBaselineOf="@+id/etHoraCasa"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/tvHoraCasaRestante"
        style="@style/text"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:text="Casa Restante"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/hora_casa_igual"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvHoraCasa"
        />

    <EditText
        android:id="@+id/etHoraCasaRestante"
        style="@style/hora"
        app:layout_constraintLeft_toLeftOf="@+id/tvHoraCasaRestante"
        app:layout_constraintTop_toBottomOf="@+id/tvHoraCasaRestante"
        android:focusable="false"
        />

</androidx.constraintlayout.widget.ConstraintLayout>